// mod-img
.img-show-outer
  width $layout-max-width
.img-show-inner
  margin-top: 50px
  display: flex
  justify-content: space-between
  flex-wrap: wrap

.img-show-post
  flex-basis: 31%

  .img-show-post-cover-class
    width 100%
    height 350px
    object-fit cover


.img-show-post-title
  text-align: center
  font-size: 1.4em
  margin-top: 30px
  color var(--color-text-main)
  font-family $font-title
  position: relative
  line-height: 2.5
  transition all .4s
  &:after
    content ""
    position absolute
    width 40px
    height 1.1px
    background-color var(--color-theme-main)
    bottom: 0
    left 50%
    transform translateX(-50%)
    transition all .4s
  &:hover
    text-shadow 1px 2px 4px var(--color-text-secondary)
    &:after
      width 60px

.img-show-post-date
  text-align: center
  font-family $font-content
  font-size: 0.9em
  margin-bottom: 45px
  margin-top: -9px
  color: var(--color-text-secondary)

.img-show-post
  display: flex
  flex-direction: column
  &:first-child
    flex-basis: 100%
    flex-direction: row
    margin-bottom: 85px
    .img-show-post-cover
      flex-basis: 65.5%
    .img-show-post-intro
      flex-basis: 34%
      margin: auto

.img-show-post-cover
  transition: all .4s
  &:hover
    transform scale(1.05)
    box-shadow 0 6px 9px 0 rgba(#333, 0.2)

// mod-simple
.simple-inner
  margin-top 60px
  width $post-max-width
  a
    color var(--color-text-main)

.simple-item-meta
  display flex
  font-family $font-title
  align-content center
  margin-bottom 2px
  font-size 0.7em
  img
    width 25px
    height 25px
    display block
    border-radius 100%
  .simple-meta-name
    margin-left 6px
    color var(--color-text-main)
  .simple-meta-date
    margin-left 5px
    color var(--color-text-secondary)

.simple-post-list .item-divider:not(:first-child)
  box-shadow 0 -1.1px var(--color-embellish)

.item-divider
  margin-bottom 30px
  padding-top 35px
  .homepage-title
    font-family $font-title
    margin-bottom 10px
    color var(--color-text-main)
    font-size 1.3em
    font-weight 1000
  .homepage-content
    font-family $font-title
    font-size .9em
    line-height 1.55
    font-weight 200
    p
      margin 0
    a
      color var(--color-theme-main)
      padding 0 3px
  .homepage-contact
    margin-top 9px
    font-size 1em
    a
      color var(--color-text-secondary)
      general-transition()
      margin-right 7px
      &:hover
        color var(--color-theme-main)
        box-shadow none
.item-homepage
  margin-bottom 15px

.simple-post-item
  display flex
  .simple-item-left
    justify-content center
  .simple-item-right
    flex-basis 700px
    margin-left 15px
    img
      width 100%
      object-fit cover
      aspect-ratio 16/9
      border-radius 1.5px

.simple-post-title
  margin-bottom 2px
  font-family $font-title
  color var(--color-text-main)
  font-size 1.3em
  font-weight 1000
  general-transition()
  &:hover
    color $color-theme-main

.simple-post-excerpt
  font-family $font-title
  font-size .87em
  color var(--color-text-secondary)
  general-transition()
  &:hover
    color $color-text-main