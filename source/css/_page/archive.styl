// mod-img
.img-show-outer
  width $layout-max-width
.img-show-inner
  margin-top: 50px
  display: flex
  justify-content: space-between
  flex-wrap: wrap

.img-show-post
  flex-basis: 31%

  .img-show-post-cover-class
    width 100%
    height 350px
    object-fit cover


.img-show-post-title
  text-align: center
  font-size: 1.4em
  margin-top: 30px
  color var(--color-text-main)
  font-family $font-title
  position: relative
  line-height: 2.5
  transition all .4s
  &:after
    content ""
    position absolute
    width 40px
    height 1.1px
    background-color var(--color-theme-main)
    bottom: 0
    left 50%
    transform translateX(-50%)
    transition all .4s
  &:hover
    text-shadow 1px 2px 4px var(--color-text-secondary)
    &:after
      width 60px

.img-show-post-date
  text-align: center
  font-family $font-content
  font-size: 0.9em
  margin-bottom: 45px
  margin-top: -9px
  color: var(--color-text-secondary)

.img-show-post
  display: flex
  flex-direction: column
  &:first-child
    flex-basis: 100%
    flex-direction: row
    margin-bottom: 85px
    .img-show-post-cover
      flex-basis: 65.5%
    .img-show-post-intro
      flex-basis: 34%
      margin: auto

.img-show-post-cover
  transition: all .4s
  &:hover
    transform scale(1.05)
    box-shadow 0 6px 9px 0 rgba(#333, 0.2)

// mod-simple
.simple-inner
  width $post-max-width
  a
    color var(--color-text-main)

.simple-post-date
  color var(--color-text-secondary)

.simple-post-title
  font-family $font-title