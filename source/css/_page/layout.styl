/* 全局样式 */
*
  padding 0
  margin 0
body
  height 100%
  width 100%
  general-transition()
  overflow-x hidden
  line-height 1.5
  font-size $normal-font-size
  font-family $font-content
  color: var(--color-text-main)
a
  text-decoration none
  color var(--color-text-main)
::selection
  background-color $color-theme-main
  color #fff

::-webkit-scrollbar
  width 0
  height 7px

/* 整体布局 */

.universal-outer
  display flex
  flex-direction column
  min-height 100vh
  .menu-outer
    flex-basis 70px
    background $color-embellish
  .footer-outer
    flex-basis 70px
    background $color-embellish
  .body-outer
    flex-grow 1
    flex-shrink 1

/* menu */
.menu-outer
  font-family $font-title
  width 100%
  display flex
  justify-content center
.menu-inner
  width $layout-max-width
  display flex
  justify-content space-between
  align-items center
  transition all .3s
.menu-site-name,.mobile-menu-site-name
  font-family $font-title
  font-size 1.7rem
.menu-site-name
  a
    color var(--color-text-secondary)
    transition all .4s
    position relative
    &:hover
      color var(--color-text-main)
.menu-ul
  list-style none
.menu-li
  cursor pointer
  float left
  margin-right 20px
  padding 0 10px
  font-size 1.1rem
  color var(--color-text-secondary)
  position relative
  transition all .4s
  &:hover
    color var(--color-text-main)
.active-link
  .menu-li
    position: relative;
    &:after
      content: "";
      position: absolute;
      top: 0;
      right: 0;
      width: 5px;
      height: 5px;
      background-color: var(--color-theme-main)
      border-radius: 50%;
      z-index: 1

/* body */
.body-outer
  width 100%
  display flex
  justify-content center
/* home */
.intro-section
  width $layout-max-width
  .intro-content
    margin-top 100px
    width 60%
  .intro-title
    font-family $font-title
    font-size 4.5rem
    font-weight 1000
    margin 0
    padding 0
  .intro-sub
    font-family $font-content
    margin-top 30px
    font-size 1.32rem
    line-height 1.8em
    margin-left 5px
  .intro-contact
    margin-top 10px
    font-size 1.5rem
    line-height 1.8em
    margin-left 5px
    a
      color var(--color-text-secondary)
      general-transition()
      &:hover
        color var(--color-text-main)
  .intro-content,a
    color var(--color-text-main)
    text-decoration none
    margin-right 3px
.paginator
  margin 50px 0
  font-family $font-title
  text-align center
  font-size 1.17rem
  .page-number,.space
    display none
  .extend
    color var(--color-text-secondary)
    general-transition()
    &:hover
      color var(--color-text-main)
/* footer */
.footer-outer
  display flex
  justify-content center
  font-family $font-title
  background #333
.footer-inner
  width $layout-max-width
  display flex
  justify-content space-between
  align-items center
.footer-text
  color var(--color-text-secondary)
  font-size 1rem
  a
    color var(--color-text-secondary)
    general-transition()
    &:hover
      color var(--color-theme-main)
.footer-contact
  font-size 1.1rem
.footer-ul
  list-style none
.footer-li
  float left
  margin-right 10px
  transition all .3s
  i
    color var(--color-text-secondary)
    font-size 1.2em
    general-transition()
    padding 5px
    border-radius 100%
  &:hover
    i
      color var(--color-theme-main)
